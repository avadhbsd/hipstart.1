<%= form_for @profile, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :short_bio, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :short_bio, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :youtube_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :youtube_url, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebok_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :facebok_url, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :twitter_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :twitter_url, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  profiles_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
